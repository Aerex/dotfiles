# vim: filetype=muttrc


set my_smtp_domain      = `. $my_confdir/getcred Email/google smtp_domain`
set my_imap_domain      = `. $my_confdir/getcred Email/google imap_domain`
set my_imap_port        = `. $my_confdir/getcred Email/google imap_port`
set editor              = "$EDITOR"
set quit                = yes
set imap_user           = `. $my_confdir/getcred Email/google login`
set imap_pass           = `. $my_confdir/getcred Email/google pass`
set smtp_url            = "smtp://$imap_user:$imap_pass@$my_smtp_domain"
set realname            = "$MUTT_REAL_NAME"
set from                = `. $my_confdir/getcred Email/google login`
set use_from            = yes
mailboxes               = +INBOX
set mbox_type           = Maildir
set sendmail            = "/usr/bin/msmtp -a INBOX"
set folder              = "imaps://$my_imap_domain" 
set spoolfile           = +INBOX
set record              = +INBOX.Sent
set postponed           = +INBOX.Drafts
set header_cache        = ~/.config/neomutt/accounts/gmail/cache/headers
set message_cachedir    = ~/.config/neomutt/accounts/gmail/cache/bodies
set certificate_file    = ~/.config/neomutt/accounts/gmail/certificates

color index yellow default '.*'
color index_author red default '.*'
color index_number brightblue default
color index_subject cyan default '.s'
color index_size green default
