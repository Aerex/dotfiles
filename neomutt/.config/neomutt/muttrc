# Moving Around           {{{2 
#############################

bind attach,pager,browser,index g   noop
bind attach,browser,index       gg  first-entry
bind attach,browser,index       G   last-entry
bind pager                      gg  top
bind pager                      G   bottom
bind pager                      k   previous-line
bind pager                      j   next-line
bind index                      l   display-message
bind index                      L   limit
bind attach,browser,pager,index \CF next-page
bind attach,browser,pager,index \CB previous-page
bind attach,browser,pager,index \Cu half-up
bind attach,browser,pager,index \Cd half-down
bind browser,pager              \Ce next-line
bind browser,pager              \Cy previous-line
bind index                      \Ce next-line
bind index                      \Cy previous-line
bind index <left> sidebar-prev          # got to previous folder in sidebar
bind index <right> sidebar-next         # got to next folder in sidebar
# Credits to https://github.com/ohthehugemanatee/personalize/blob/00649893973fe87a14988132a8df40a5656f5490/.mutt/muttrc#L126
macro attach s <save-entry><bol>~/Downloads/

# <Space>s prefix will show flagged messages
#bind index . noop
macro index <Space>sn  "<limit>(~N|~F)<Enter><enter-command>echo 'View new/flag'<Enter>"  "view new/flag"
# .u will show all unread
macro index <Space>su  "<limit>(~U|~F)<Enter><enter-command>echo 'View unread/flag'<Enter>"  "view unread/flag"
# .a will show all again
macro index <Space>sa  "<limit>~A<Enter><enter-command>'View all'<Enter>"       "view all"

