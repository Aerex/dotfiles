# Show all databases
show dbs
# Show all collections/tables
show tables
show collections

# Find all in collection named `col`
db.col.find()
db.col.find({})

# To get pretty results on collection named `col` 
db.col.find().pretty()

# Filter documents by field value condition
db.books.find({"title":"Treasure Island"})

# Update document by field (where item = paper)
db.books.updateOne({"item": "paper"},
  {
    $set: { "size.uom": "cm", status: "P" },
    $currentDate: { lastModified: true }
  }
})
